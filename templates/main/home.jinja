{% extends "main/base.jinja" %}

{% block content %}

<!-- ═══════════════════════════════════════════════════════
     HERO
══════════════════════════════════════════════════════════ -->
<section style="padding-top:72px; min-height:100vh; display:flex; flex-direction:column; position:relative; overflow:hidden;">

    <!-- Decorative rings -->
    <div class="ring" style="width:600px; height:600px; top:-200px; right:-200px; opacity:.4;"></div>
    <div class="ring" style="width:300px; height:300px; bottom:10%; left:-100px; opacity:.25;"></div>

    <!-- Thin vertical accent line -->
    <div style="position:absolute; left:2.5rem; top:72px; bottom:0; width:1px; background:linear-gradient(to bottom, var(--rule), transparent); display:none;" class="md-line"></div>

    <!-- Hero content -->
    <div class="wrap" style="flex:1; display:flex; align-items:center; padding:6rem 2.5rem 4rem; position:relative; z-index:1;">
        <div style="display:grid; grid-template-columns:1fr 1fr; gap:5rem; align-items:center; width:100%;" class="hero-grid">

            <!-- Left: Heading -->
            <div>
                <div class="label" style="margin-bottom:1.5rem; opacity:.8;">
                    {{ site.hero_badge_year }} &nbsp;·&nbsp; {{ site.hero_badge_text }}
                </div>

                <h1 class="display" style="font-size:clamp(3rem,6vw,5.5rem); font-weight:900; line-height:1.04; margin-bottom:2rem;">
                    {{ site.hero_heading_line_one }}
                    <em style="color:var(--gold); font-style:italic;">{{ site.hero_heading_highlight_one }}</em><br>
                    {{ site.hero_heading_line_two }}<br>
                    <em style="color:var(--gold-lt); font-style:italic; font-size:.92em;">{{ site.hero_heading_highlight_two }}</em>
                </h1>

                <div class="h-rule" style="margin-bottom:2rem; width:200px;"></div>

                <p style="font-size:1rem; color:var(--ink-2); line-height:1.8; max-width:480px; margin-bottom:2.5rem;">
                    {{ site.hero_subtitle }}
                </p>

                <div style="display:flex; gap:1rem; flex-wrap:wrap;">
                    <button type="button" data-modal-open="contact-modal" class="btn-gold">
                        {{ site.primary_cta_label }} &nbsp;<i class="fa-solid fa-arrow-right" style="font-size:.7rem;"></i>
                    </button>
                    <a href="{{ site.secondary_cta_url }}" class="btn-ghost">{{ site.secondary_cta_label }}</a>
                </div>

                <!-- Tags -->
                <div style="display:flex; gap:2rem; margin-top:3rem; flex-wrap:wrap;">
                    <span class="caption" style="display:flex; align-items:center; gap:.5rem;"><span style="color:var(--gold); font-size:.6rem;">◆</span> Kanıtlanmış Referanslar</span>
                    <span class="caption" style="display:flex; align-items:center; gap:.5rem;"><span style="color:var(--gold); font-size:.6rem;">◆</span> Ölçeklenebilir Mimari</span>
                    <span class="caption" style="display:flex; align-items:center; gap:.5rem;"><span style="color:var(--gold); font-size:.6rem;">◆</span> Şeffaf Teknik Süreç</span>
                </div>
            </div>

            <!-- Right: Stats Panel -->
            <div class="fade-up" style="background:var(--canvas-2); border:1px solid var(--rule); padding:2.5rem; position:relative;">

                <!-- Gold top accent -->
                <div style="position:absolute; top:0; left:0; right:0; height:2px; background:linear-gradient(90deg, var(--gold-dk), var(--gold), transparent);"></div>

                <div class="label" style="margin-bottom:2rem;">Performans Göstergeleri</div>

                <div style="display:grid; grid-template-columns:1fr 1fr; gap:.75px; background:var(--rule);">
                    {% for stat in stats %}
                    <div style="background:var(--canvas-2); padding:1.75rem;">
                        <div class="display" style="font-size:2.4rem; font-weight:900; color:var(--gold); line-height:1; margin-bottom:.5rem;">{{ stat.value }}</div>
                        <div class="caption" style="font-size:.65rem; line-height:1.5;">{{ stat.label }}</div>
                    </div>
                    {% endfor %}
                </div>

                <div style="margin-top:1.5rem; padding:1.25rem; border:1px solid var(--rule-lt); background:rgba(192,154,69,.03);">
                    <p style="font-size:.82rem; color:var(--ink-3); line-height:1.7;">
                        Kanıtlanmış referanslar, ölçülebilir teknik başarılar ve mühendislik disipliniyle inşa edilmiş projeler.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom marquee strip -->
    <div style="border-top:1px solid var(--rule); overflow:hidden; padding:.85rem 0; background:var(--canvas-2);">
        <div class="marquee-track" style="display:flex; gap:0; white-space:nowrap;">
            {% set tags = ['Oyun Geliştirme', 'Backend Mimari', 'SaaS', 'Yazılım Mühendisliği', 'Unity / C#', 'Veri Analitiği', 'API Servisleri', 'Mobil Geliştirme', 'Oyun Geliştirme', 'Backend Mimari', 'SaaS', 'Yazılım Mühendisliği', 'Unity / C#', 'Veri Analitiği', 'API Servisleri', 'Mobil Geliştirme'] %}
            {% for tag in tags %}
            <span class="caption" style="padding:0 2.5rem; border-right:1px solid var(--rule); font-size:.65rem; display:inline-block;">{{ tag }}</span>
            {% endfor %}
        </div>
    </div>
</section>

<style>
    @keyframes marquee { from { transform:translateX(0); } to { transform:translateX(-50%); } }
    .marquee-track { animation: marquee 28s linear infinite; }
    @media (max-width:900px) { .hero-grid { grid-template-columns:1fr !important; gap:3rem !important; } }
</style>


<!-- ═══════════════════════════════════════════════════════
     PROCESS / METHOD
══════════════════════════════════════════════════════════ -->
<section class="section-pad bg-alt">
    <div class="wrap">

        <div style="display:flex; align-items:flex-end; justify-content:space-between; margin-bottom:4rem; flex-wrap:wrap; gap:2rem;">
            <div>
                <div class="label" style="margin-bottom:1rem;">Çalışma Yöntemi</div>
                <h2 class="display" style="font-size:clamp(2rem,4vw,3.2rem); font-weight:700;">Mühendislik <em style="color:var(--gold); font-style:italic;">Sürecimiz</em></h2>
            </div>
            <p style="max-width:320px; font-size:.9rem; color:var(--ink-2); line-height:1.8;">Keşiften canlıya; her aşamada şeffaf iletişim ve ölçülebilir çıktılar.</p>
        </div>

        <div class="stagger" style="display:grid; grid-template-columns:repeat(3,1fr); gap:0; background:var(--rule);">

            <div style="background:var(--canvas-2); padding:2.5rem 2rem; position:relative;">
                <div class="display" style="font-size:5rem; font-weight:900; color:rgba(192,154,69,.1); line-height:1; margin-bottom:1.5rem; font-style:italic;">I</div>
                <div class="label" style="color:var(--gold-lt); margin-bottom:1rem;">01 — Keşif</div>
                <h3 class="display" style="font-size:1.3rem; font-weight:600; margin-bottom:1rem;">Analiz & Mimari Tasarım</h3>
                <p style="font-size:.88rem; color:var(--ink-3); line-height:1.8;">Problemin köküne inen teknik gereksinim analizi, sistem mimarisi ve teknoloji stack kararları.</p>
            </div>

            <div style="background:var(--canvas-2); padding:2.5rem 2rem; border-left:1px solid var(--rule); position:relative;">
                <div class="display" style="font-size:5rem; font-weight:900; color:rgba(192,154,69,.1); line-height:1; margin-bottom:1.5rem; font-style:italic;">II</div>
                <div class="label" style="color:var(--gold-lt); margin-bottom:1rem;">02 — Geliştirme</div>
                <h3 class="display" style="font-size:1.3rem; font-weight:600; margin-bottom:1rem;">Mühendislik & Üretim</h3>
                <p style="font-size:.88rem; color:var(--ink-3); line-height:1.8;">Test kapsamlı, code review süreçli ve CI/CD pipeline destekli agile geliştirme döngüleri.</p>
            </div>

            <div style="background:var(--canvas-2); padding:2.5rem 2rem; border-left:1px solid var(--rule); position:relative;">
                <div class="display" style="font-size:5rem; font-weight:900; color:rgba(192,154,69,.1); line-height:1; margin-bottom:1.5rem; font-style:italic;">III</div>
                <div class="label" style="color:var(--gold-lt); margin-bottom:1rem;">03 — Teslimat</div>
                <h3 class="display" style="font-size:1.3rem; font-weight:600; margin-bottom:1rem;">Deployment & Bakım</h3>
                <p style="font-size:.88rem; color:var(--ink-3); line-height:1.8;">Production'a sorunsuz geçiş, gerçek zamanlı izleme ve sözleşmeli teknik destek sürekliliği.</p>
            </div>

        </div>
    </div>
    <style> @media(max-width:700px){ .stagger > div { border-left:none !important; border-top:1px solid var(--rule); } } </style>
</section>


<!-- ═══════════════════════════════════════════════════════
     SERVICES
══════════════════════════════════════════════════════════ -->
<section id="services" class="section-pad">
    <div class="wrap">

        <div style="margin-bottom:4rem;">
            <div class="label" style="margin-bottom:1rem;">Çözümler</div>
            <h2 class="display fade-up" style="font-size:clamp(2rem,4vw,3.2rem); font-weight:700;">{{ site.services_title }}</h2>
        </div>

        <div style="display:grid; grid-template-columns:repeat(3,1fr); gap:1px; background:var(--rule);" class="services-grid">
            {% for service in services %}
            <div class="art-card" style="padding:2.5rem; position:relative; overflow:hidden;">

                <!-- Top accent -->
                <div style="position:absolute; top:0; left:0; right:0; height:1px; background:linear-gradient(90deg, var(--gold-dk), transparent);"></div>

                <!-- Icon -->
                <div style="width:48px; height:48px; border:1px solid var(--rule); display:flex; align-items:center; justify-content:center; margin-bottom:2rem;">
                    <i class="{{ service.icon_class }}" style="color:var(--gold); font-size:1.1rem;"></i>
                </div>

                <!-- Number -->
                <div class="mono" style="font-size:.65rem; letter-spacing:.2em; color:var(--ink-3); margin-bottom:.75rem;">
                    0{{ loop.index }}
                </div>

                <h3 class="display" style="font-size:1.25rem; font-weight:700; margin-bottom:1rem; line-height:1.3;">{{ service.title }}</h3>
                <p style="font-size:.88rem; color:var(--ink-2); line-height:1.8; margin-bottom:1.5rem;">{{ service.description }}</p>

                <div class="h-rule" style="margin-bottom:1.25rem;"></div>
                <ul style="list-style:none; padding:0; display:flex; flex-direction:column; gap:.6rem;">
                    <li style="font-size:.82rem; color:var(--ink-3); display:flex; align-items:center; gap:.75rem;">
                        <span style="color:var(--gold); font-size:.5rem;">◆</span> {{ service.bullet_one }}
                    </li>
                    <li style="font-size:.82rem; color:var(--ink-3); display:flex; align-items:center; gap:.75rem;">
                        <span style="color:var(--gold); font-size:.5rem;">◆</span> {{ service.bullet_two }}
                    </li>
                </ul>
            </div>
            {% endfor %}
        </div>
    </div>
    <style> @media(max-width:900px){ .services-grid { grid-template-columns:1fr !important; } } </style>
</section>


<!-- ═══════════════════════════════════════════════════════
     PORTFOLIO PREVIEW
══════════════════════════════════════════════════════════ -->
<section id="portfolio" class="section-pad bg-alt">
    <div class="wrap">

        <div style="display:flex; align-items:flex-end; justify-content:space-between; margin-bottom:3.5rem; flex-wrap:wrap; gap:1.5rem;">
            <div>
                <div class="label" style="margin-bottom:1rem;">Referanslar</div>
                <h2 class="display fade-up" style="font-size:clamp(2rem,4vw,3.2rem); font-weight:700;">{{ site.portfolio_title }}</h2>
            </div>
            <a href="/portfolyo/" class="btn-ghost" style="font-size:.65rem;">Tümünü Gör &nbsp;<i class="fa-solid fa-arrow-right" style="font-size:.6rem;"></i></a>
        </div>

        <div style="display:grid; grid-template-columns:repeat(3,1fr); gap:1px; background:var(--rule);" class="portfolio-grid">
            {% for item in portfolio_items %}
            <a href="{{ item.get_absolute_url() }}" class="art-card" style="display:block; text-decoration:none; overflow:hidden; position:relative;">

                <!-- Image -->
                <div class="img-zoom" style="height:240px;">
                    <img src="{{ item.image_url }}" alt="{{ item.title }}">
                    <div style="position:absolute; inset:0; background:linear-gradient(to top, rgba(13,11,9,.9) 0%, transparent 55%);"></div>
                </div>

                <!-- Content -->
                <div style="padding:1.75rem;">
                    <!-- Catalogue number -->
                    <div class="mono" style="font-size:.62rem; letter-spacing:.22em; color:var(--gold-dk); margin-bottom:.75rem;">
                        CAT — 0{{ loop.index }}
                    </div>
                    <h3 class="display" style="font-size:1.15rem; font-weight:700; color:var(--ink); margin-bottom:.75rem; line-height:1.3;">{{ item.title }}</h3>
                    <p style="font-size:.82rem; color:var(--ink-3); line-height:1.7; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden;">{{ item.description }}</p>

                    <div style="margin-top:1.25rem; display:flex; align-items:center; gap:.5rem; color:var(--gold); font-family:'DM Mono',monospace; font-size:.65rem; letter-spacing:.15em; text-transform:uppercase;">
                        İncele <i class="fa-solid fa-arrow-right" style="font-size:.6rem;"></i>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
    <style> @media(max-width:900px){ .portfolio-grid { grid-template-columns:1fr !important; } } </style>
</section>


<!-- ═══════════════════════════════════════════════════════
     CONTACT CTA
══════════════════════════════════════════════════════════ -->
<section id="contact" class="section-pad">
    <div class="wrap">
        <div class="fade-up" style="border:1px solid var(--rule); background:var(--canvas-2); padding:5rem 4rem; position:relative; overflow:hidden; text-align:center;">

            <!-- Gold top border -->
            <div style="position:absolute; top:0; left:0; right:0; height:2px; background:linear-gradient(90deg, transparent, var(--gold), transparent);"></div>

            <!-- Background roman numeral -->
            <div class="display" style="position:absolute; right:-2rem; bottom:-3rem; font-size:14rem; font-weight:900; color:rgba(192,154,69,.04); line-height:1; pointer-events:none; font-style:italic; user-select:none;">TS</div>

            <div class="label" style="margin-bottom:1.25rem;">İş Birliği</div>
            <h2 class="display" style="font-size:clamp(2rem,5vw,4rem); font-weight:700; max-width:700px; margin:0 auto 1.5rem; line-height:1.1;">
                {{ site.contact_title }}
            </h2>
            <p style="font-size:1rem; color:var(--ink-2); max-width:560px; margin:0 auto 3rem; line-height:1.8;">{{ site.contact_body }}</p>

            <button type="button" data-modal-open="contact-modal" class="btn-gold" style="font-size:.75rem;">
                {{ site.contact_button_label }} &nbsp;<i class="fa-solid fa-arrow-right" style="font-size:.65rem;"></i>
            </button>
        </div>
    </div>
</section>

{% endblock %}
